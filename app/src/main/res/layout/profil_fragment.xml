
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFrag">


    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <!--<RelativeLayout-->
            <!--android:layout_above="@+id/add"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center">-->

            <!--<ImageView-->
                <!--android:id="@+id/image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:scaleType="center"/>-->


        <!--</RelativeLayout>-->

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#82b1ff"
            android:layout_height="wrap_content"
            android:text="@string/add_profile_pic"
        />
        <!--android:layout_centerInParent="true"  // ini buat jadi ditengah tengah-->


        <RelativeLayout
            android:id="@+id/upload_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add"
            >
            <Button
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:visibility="gone"/>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"/>
        </RelativeLayout>



        <View
            android:id="@+id/VerticalLine"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_below="@id/upload_container"
            android:layout_height="3dp"
            android:background="#aaa" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="#ffffff"
            android:id="@+id/username_layout"
            android:layout_below="@id/VerticalLine">

            <TextView
                android:id="@+id/usernames"
                android:text="Name"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/username"
                android:text="test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"

                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/next1"
                android:layout_toStartOf="@+id/next1" />
            <ImageView
                android:id="@+id/next1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/usernames"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
        <View
            android:id="@+id/VerticalLine1"
            android:layout_width="match_parent"
            android:layout_below="@id/username_layout"
            android:layout_height="3dp"
            android:background="#aaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="#ffffff"
            android:id="@+id/useremail_layout"
            android:layout_below="@id/VerticalLine1">

            <TextView
                android:id="@+id/useremails"
                android:text="Primary Email"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/useremail"
                android:text="test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/next2"
                android:layout_toStartOf="@+id/next2" />
            <ImageView
                android:id="@+id/next2"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/useremails"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
        <View
            android:id="@+id/VerticalLine2"
            android:layout_width="match_parent"
            android:layout_below="@id/useremail_layout"
            android:layout_height="3dp"
            android:background="#aaa" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="#ffffff"
            android:id="@+id/changepass_layout"
            android:layout_below="@id/VerticalLine2">

            <TextView
                android:id="@+id/userchanges"
                android:text="Change Password"
                android:paddingLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/userchange"
                android:text="******"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/next3"
                android:layout_toStartOf="@+id/next3" />
            <ImageView
                android:id="@+id/next3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/userchanges"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
        <View
            android:id="@+id/VerticalLine3"
            android:layout_width="match_parent"
            android:layout_below="@id/changepass_layout"
            android:layout_height="3dp"
            android:background="#aaa" />




        <Button
            android:id="@+id/btnLogout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn_logut_bg"
            android:layout_centerHorizontal="true"
            android:text="@string/btn_logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"


            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            />


    </RelativeLayout>


</FrameLayout>

